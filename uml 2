class Store
{
    static void Main(string[] args)
    {
        MenuCatalog menu = new MenuCatalog();
        Pizza pizza1 = new Pizza { PizzaNumber = 1, Name = "Salat pizza" };
        Pizza pizza2 = new Pizza { PizzaNumber = 2, Name = "Kebab pizza med toppings" };

        menu.AddPizza(pizza1);
        menu.AddPizza(pizza2);

        menu.PrintMenu();
        menu.DeletePizza();
        menu.PrintMenu();
        Pizza updatedPizza = new Pizza { PizzaNumber = 1, Salat pizza  = "Updated salat pizza" };
        menu.UpdatePizza(updatedPizza);
        menu.PrintMenu();
        Pizza searchedPizza = menu.SearchPizza(1);
        Console.WriteLine(searchedPizza);
    }
}




