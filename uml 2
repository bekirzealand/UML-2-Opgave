public class Pizza
{
    public int PizzaNumber { get; set; }
    public string Name { get; set; } 

    public override string ToString()
    {
        return $"Pizza {PizzaNumber}: {Name}";
    }


public class MenuCatalog
{
    private List<Pizza> pizzas = new List<Pizza>();

